<div class="retro_title">
  <span>Available Retrospectives</span>
  <%= link_to image_tag("new-retro.png", :class => 'nav_image', :alt => "(new retrospective)"), new_retrospective_path, :title => 'new retrospective' %>
</div>
<table class="retrospectives">
  <tr>
    <th class="title">Title</th>
    <th class="title"></th>
  </tr>
  <% @retrospectives.each do |retrospective| %>
    <tr>
      <td class="retro_list"><%= link_to retrospective.title, retrospective, :title => 'show retrospective', :class => 'retro_list' %></td>
      <td>
        <%= link_to image_tag("show-retro.png", :class => 'nav_image', :alt => "(+1)"), retrospective, :title => 'show retrospective' %>
        <%= link_to image_tag("edit.png", :class => 'nav_image', :alt => "(edit)"), edit_retrospective_path(retrospective), :title => 'rename retrospective' %>
        <%= link_to image_tag("delete.png", :class => 'nav_image', :alt => "(+1)"), retrospective, :confirm => 'Are you sure?', :method => :delete, :title => 'delete retrospective' %>
      </td>
    </tr>
  <% end %>
</table>

<br/>

