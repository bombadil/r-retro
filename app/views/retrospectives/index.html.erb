<div class="retro_title">
  <span>Available Retrospectives</span>
</div>
<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @retrospectives.each do |retrospective| %>
  <tr>
    <td><%= retrospective.title %></td>
    <td><%= link_to image_tag("show-retro.png", :width => "18px", :height => "18px", :alt => "(+1)"), retrospective, :title => 'show retrospective' %></td>
    <td><%= link_to image_tag("edit.png", :width => "18px", :height => "18px", :alt => "(edit)"), edit_retrospective_path(retrospective), :title => 'rename retrospective' %></td>
    <td><%= link_to image_tag("delete.png", :width => "18px", :height => "18px", :alt => "(+1)"), retrospective, :confirm => 'Are you sure?', :method => :delete, :title => 'delete retrospective' %></td>
  </tr>
<% end %>
</table>

<br />

