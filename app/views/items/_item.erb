<div id="<%= context %>_item_<%= item.id %>" class="<%= context %>_item">
  <div class="item_actions">
    <%= link_to image_tag("edit.png", :class => 'nav_image', :alt => "(edit)"), '', :href => 'javascript:void(0);', :id => "#{context}_item_value_#{item.id}", :class => 'inline_link', :title => 'edit item' %>
    <%= render :partial => "#{context}s/#{context}_item_actions", :locals => {:item => item} %>
  </div>

<span id="<%= context %>_li_item_<%= item.id %>" class="item">
  <span class="item_vote">(<span id="<%= context %>_item_votes_<%= item.id %>" class="item_vote"><%= item.item_votes.size %></span>)</span>
  <span id="inline_<%= context %>_item_value_<%= item.id %>" class="item_value"><%= item.value %></span>
</span>

</div>

<%= inline_edit_item_with_remote_update(:id => item.id, :element_id => "#{context}_item_value", :rows => 2,
                                        :url => update_value_retrospective_section_item_url(item.section.retrospective, item.section, item),
                                        :refresh_url => refresh_value_retrospective_section_item_url(item.section.retrospective, item.section, item)) %>
<%= draggable_element("#{context}_item_#{item.id}", :revert => true) %>
