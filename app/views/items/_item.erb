<span id="item_<%= item.id %>">
<li id="li_item_<%= item.id %>" class="item">
  <span id="inline_item_value_<%= item.id %>"><%= item.value %></span>
  (<span id="item_votes_<%= item.id %>"><%= item.item_votes.size %></span>)
  <%= link_to image_tag("thumbs-up.png", :width => "18px", :height => "18px", :alt => "(+1)"), vote_for_retrospective_section_item_url(item.section.retrospective, item.section, item), :remote => true, :method => :post, :class => 'inline_link', :confirm => 'Vote for item?' %>
  <%= link_to image_tag("thumbs-down.png", :width => "18px", :height => "18px", :alt => "(-1)"), remove_vote_retrospective_section_item_url(item.section.retrospective, item.section, item), :remote => true, :method => :post, :class => 'inline_link', :confirm => 'Un-vote for item?' %>
  <%= link_to image_tag("edit.png", :width => "18px", :height => "18px", :alt => "(edit)"), '', :href => 'javascript:void(0);', :id => "item_value_#{item.id}", :class => 'inline_link' %>
  <%= link_to image_tag("delete.png", :width => "18px", :height => "18px", :alt => "(remove)"), [item.section.retrospective, item.section, item], :remote => true, :class => 'inline_link', :method => :delete, :confirm => 'Remove item?' %>
  <%= inline_edit_item_with_remote_update(:id => item.id, :element_id => "item_value", :url => update_value_retrospective_section_item_url(item.section.retrospective, item.section, item), :on_complete => '' ) %>
</li>
</span>
<%= draggable_element("li_item_#{item.id}", :revert => true) %>