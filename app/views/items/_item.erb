<span id="<%= context %>_item_<%= item.id %>">
<li id="<%= context %>_li_item_<%= item.id %>" class="item">
  <%= link_to image_tag("edit.png", :class => 'nav_image', :alt => "(edit)"), '', :href => 'javascript:void(0);', :id => "#{context}_item_value_#{item.id}", :class => 'inline_link', :title => 'edit item' %>
  <%= render :partial => "#{context}s/#{context}_item_actions", :locals => {:item => item} %>
  (<span id="<%= context %>_item_votes_<%= item.id %>"><%= item.item_votes.size %></span>)
  <span id="inline_<%= context %>_item_value_<%= item.id %>"><%= item.value %></span>
  <%= inline_edit_item_with_remote_update(:id => item.id, :element_id => "#{context}_item_value", :url => update_value_retrospective_section_item_url(item.section.retrospective, item.section, item), :on_complete => '' ) %>
</li>
</span>
<%= draggable_element("#{context}_li_item_#{item.id}", :revert => true) %>